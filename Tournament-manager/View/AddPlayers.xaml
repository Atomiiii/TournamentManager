<Page x:Class="Tournament_manager.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Back" Command="NavigationCommands.BrowseBack" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBlock Text="Players" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <DataGrid CanUserAddRows="False" CanUserDeleteRows="False">
            </DataGrid>

            <StackPanel Grid.Column="1">
                <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
                <TextBox Margin="5,0,5,15"></TextBox>
                <Label Content="Select division" HorizontalAlignment="Center" VerticalAlignment="Center" ></Label>
                <ComboBox SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem>Junior</ComboBoxItem>
                    <ComboBoxItem>Senior</ComboBoxItem>
                    <ComboBoxItem>Master</ComboBoxItem>
                </ComboBox>
                <Button Content="Add player" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0" Width="100"/>


            </StackPanel>
        </Grid>
        
    </Grid>
</Page>
