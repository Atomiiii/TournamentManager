<Page x:Class="Tournament_manager.Pages.TournamentType"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TournamentType">

    <Grid Background="White">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" ButtonBase.Click="Button_Click">
            <TextBlock Text="Tournament manager" FontSize="60" Margin="0,0,0,20"/>
            <local:NavButton ButtonText="Swiss tournament" IsEnabled="True" Background="LightGray" BorderBrush="Black" BorderThickness="1" Height="70" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" NavUri="/View/AddPlayers.xaml"/>
            <local:NavButton ButtonText="Single elimination (soon)" IsEnabled="False" Background="LightGray" BorderBrush="Black" BorderThickness="1" Height="70" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" NavUri="/Pages/ViewPlayers.xaml"/>
            <local:NavButton ButtonText="Swiss-Single elimination (soon)" IsEnabled="False" Background="LightGray" BorderBrush="Black" BorderThickness="1" Height="70" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" NavUri="/View/AddPlayers.xaml"/>
            <Button Content="Load Tournament" Command="{Binding LoadTournamentCommand}" Width="200" Height="50" Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </WrapPanel>
    </Grid>
</Page>
